<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_border_bg_lightgreen">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sipariş Durumu"
                    android:padding="5dp"/>



                <Spinner
                    android:id="@+id/spinner_order_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/container_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border_bg_lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/lightgreen"
                    app:srcCompat="@drawable/ic_date_range_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teslim:"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/et_select_delivery_date"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_border_bg_lightgreen"
                    android:focusable="false"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/container_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_border_bg_lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/lightgreen"
                    app:srcCompat="@drawable/ic_date_range_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ölçü:"
                    android:padding="5dp"/>



                <EditText
                    android:id="@+id/et_select_measure_date"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_border_bg_lightgreen"
                    android:focusable="false"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_border_bg_lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/lightgreen"
                    app:srcCompat="@drawable/ic_drill"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Montaj var mı?"
                    android:padding="5dp"/>



                <Switch
                    android:id="@+id/switch_mount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:switchPadding="5dp"/>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/container_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border_bg_lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/lightgreen"
                    app:srcCompat="@drawable/ic_tl"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam:"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/et_order_total"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border_bg_lightgreen"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_edit_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    android:background="@drawable/rectangle_background_light_green"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_mode_edit_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border_bg_lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/lightgreen"
                    app:srcCompat="@drawable/ic_tl"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapora:"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/et_order_deposit"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border_bg_lightgreen"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_edit_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    android:background="@drawable/rectangle_background_light_green"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_mode_edit_black_24dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_background_light_green"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_dialog_close_dark" />

                <ImageButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tint="#FFFFFF"
                    android:background="@drawable/rectangle_background_light_green"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_check_black_24dp" />


            </LinearLayout>


        </LinearLayout>







    </android.support.v7.widget.CardView>




</LinearLayout>