<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/fab_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_fab_label=""
        fab:fab_showShadow="true"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_colorNormal="@color/primaryColor"
        fab:menu_colorPressed="@color/primaryLightColor"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:fab_shadowColor="#66000000"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_order_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/primaryColor"
            fab:fab_colorPressed="@color/primaryLightColor"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_label="Sipariş Düzenle"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_customer_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Müşteri Düzenle"
            fab:fab_colorNormal="@color/primaryColor"
            fab:fab_colorPressed="@color/primaryLightColor"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_size="mini" />



        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Sipariş Durumu Değiştir"
            fab:fab_colorNormal="@color/primaryColor"
            fab:fab_colorPressed="@color/primaryLightColor"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Siparişi Sil"
            fab:fab_colorNormal="@color/primaryColor"
            fab:fab_colorPressed="@color/primaryLightColor"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>